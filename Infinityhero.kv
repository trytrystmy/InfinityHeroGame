<BeginScreen>:
	name:'begin'
	BoxLayout:
		orientation:'vertical'
		padding:20
		spacing:5
		Label:
			text:'Welcome traveler! Its look like is your first adventure..\nSit down please and choose your name!'
		Label:
			id:validate
			text:''
			size_hint:(1,.001)
		TextInput:
			id:name
			text:''
			multiline:False
			size_hint:(1,.5)
			font_size:'25dp'
		Button:
			text:'I Choose!!'
			on_press:root.create_hero(root.ids.name.text,root.ids.validate)
<StatsScreen>:
	name:'stats'
<BohaterScreen>:
	name:'bohater'


